package util;

public class Velocity {
	
	private double x,y;
	
	public Velocity(double x, double y) {
		this.x = x;
		this.y = y;
	}
	public Velocity normalize() {
		double tempX = x/(x+y);
		y = y/(x+y);
		x = tempX;
	}
	public void reverseXVel() {
		this.x *= -1;
	}
	public void reverseYVel() {
		this.y *= -1;
	}
	public void reverse() {
		this.x *= -1;
		this.y *= -1;
	}
	public double getX() {
		return x;
	}
	public void setX(double x) {
		this.x = x;
	}
	public double getY() {
		return y;
	}
	public void setY(double y) {
		this.y = y;
	}
}

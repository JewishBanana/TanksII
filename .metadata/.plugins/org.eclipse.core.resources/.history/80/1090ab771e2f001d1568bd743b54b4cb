package entities.tanks;

import java.awt.Color;
import java.awt.Graphics;

import entities.Enemy;
import entities.GameObject;
import entities.ID;
import entities.projectiles.Projectile;
import entities.projectiles.RayCast;
import general.Game;
import general.Level;

public class BrownTank extends Enemy {
	
	private int shotCooldown = 180;
	private Color color = new Color(156, 104, 9);

	public BrownTank(Level level, double x, double y, double width, double height, ID id) {
		super(level, x, y, width, height, id);
	}
	@Override
	public void tick(Level level) {
		if (target == null && level.getTarget() != null)
			target = level.getTarget();
		if (shotCooldown <= 0 && target != null) {
			shotCooldown = 60;
			RayCast cast = rayCastForTarget(8, 2, 60, 300);
			if (cast != null) {
				shotCooldown = 180;
				GameObject tempBullet = new Projectile(level, cast.getPosX(), cast.getPosY(), 8, 8, ID.BULLET, this);
				Game.handler.addObject(tempBullet);
				tempBullet.setVelocity(cast.getVelocity().normalize().multiply(8));
			}
		}
		shotCooldown--;
	}
	@Override
	public void render(Graphics g) {
		g.setColor(color);
		g.fillRect((int)x, (int)y, (int)width, (int)height);
	}
}
